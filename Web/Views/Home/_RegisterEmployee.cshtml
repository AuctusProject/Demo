<form role="form">
    <div class="row clearfix form-group">
        <h2 class="col-md-12">Register Employee</h2>
    </div>
    <div class="row clearfix">
        <div class="col-md-12">
            <div class="form-group">
                <label for="name">Name</label>
                <input name="Name" class="form-control" placeholder="Name" id="employeeName" maxlength="50"/>
            </div>
            <div class="form-group">
                <label for="salary">Salary</label>
                <div class="input-group">
                    <span class="input-group-addon">$</span>
                    <input name="Salary" class="form-control" placeholder="Salary" id="salary" min="1" required/>
                </div>
            </div>
            <div class="form-group">
                <label for="contributionPercentage">Contribution Percentage</label>
                <div class="input-group">
                    <span class="input-group-addon">%</span>
                    <input name="Contribution Percentage" class="form-control" placeholder="Contribution Percentage" id="contributionPercentage" min="0.01" max="100" required/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="g-recaptcha" data-sitekey="@Auctus.Util.NotShared.Config.GOOGLE_CAPTCHA_SECRET"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-md-12">
            <button type="button" class="btn btn-default prev-step">Previous</button>
            <button type="button" class="btn pull-right btn-primary next-step" id="wizard-save-button">Deploy Contract</button>
        </div>
    </div>
</form>