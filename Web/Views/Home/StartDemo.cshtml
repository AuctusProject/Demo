﻿<div style="text-align: center; margin-top:10px">
    <div id="graphdiv"></div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12 wizard-container" style="text-align: center;">
            <div class="error-message" style="display: none">
                <span>We’re sorry, we had an unexpected error! Please try again in a minute.</span>
            </div>
            <div class="row">
                <div class="step active" id="step1" data-step-id="1">
                    @Html.Partial("_Stepper", 1)
                    @Html.Partial("_RegisterFund")
                    @Html.Partial("_Buttons", false)
                </div>
                <div class="container step" id="step2" data-step-id="2" style="display:none">
                    @Html.Partial("_Stepper", 2)
                    @Html.Partial("_RegisterCompany")
                    @Html.Partial("_Buttons", true)
                </div>
                <div class="step" id="step3" data-step-id="3" style="display:none">
                    @Html.Partial("_Stepper", 3)
                    @Html.Partial("_RegisterEmployee")
                    @Html.Partial("_Buttons", true)
                </div>
                <div class="step" id="step4" data-step-id="4" style="display:none">
                    @Html.Partial("_ContractDeploy")
                    @Html.Partial("_Buttons", false)
                </div>
            </div>
        </div>
    </div>
</div>
<div class="about-auctus">
    <label>Want to know more about our project?<br /><a href="https://auctus.org/">https://auctus.org/</a></label>
</div>
@section style{
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/fundRegister.css" />
    <link rel="stylesheet" href="~/css/companyRegister.css" />
    <link rel="stylesheet" href="~/css/contractDeploy.css" />
    <link rel="stylesheet" href="~/css/loading.css" />
    <link rel=stylesheet href="~/lib/codemirror/codemirror.css">
    <link rel=stylesheet href="~/lib/noUiSlider/nouislider.min.css">
}

@section scripts{
    <script type="text/javascript">
        var urlGetGoldReference = '@Url.Action("GetGoldReference", "Asset")';
        var urlGetSP500Reference = '@Url.Action("GetSP500Reference", "Asset")';
        var urlGetVWEHXReference = '@Url.Action("GetVWEHXReference", "Asset")';
        var urlGetMSCIWorldReference = '@Url.Action("GetMSCIWorldReference", "Asset")';
        var urlGetBitcoinReference = '@Url.Action("GetBitcoinReference", "Asset")';
        var urlSaveFund = '@Url.Action("Save", "Home")';
        var urlCheckDeploy = '@Url.Action("CheckContractCreationTransaction", "Home")';
    </script>
    <script src="~/lib/codemirror/codemirror.js"></script>
    <script src="~/lib/codemirror/mode/javascript.js"></script>
    <script type="text/javascript" src="~/js/home.js"></script>
    <script type="text/javascript" src="~/lib/noUiSlider/nouislider.min.js"></script>
    <script src="~/js/registerCompany.js" asp-append-version="true"></script>
    <script src="~/js/registerEmployee.js" asp-append-version="true"></script>
}
