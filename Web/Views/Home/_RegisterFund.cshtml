                    </div>
                    <div class="form-group bmd-form-group asset-input-group">
                        <span class="asset-input-group-left">
                            <img src="~/images/chart.png" />
                        </span>
                        <div class="asset-input-group-label">
                            S&P
                        </div>
                        <input placeholder="00" type="number" />
                        <div class="asset-input-group-percent-label">%</div>
                    </div>
                    <div class="form-group bmd-form-group asset-input-group">
                        <span class="asset-input-group-left">
                            <img src="~/images/chart.png" />
                        </span>
                        <div class="asset-input-group-label">
                            BONDS
                        </div>
                        <input placeholder="00" type="number" />
                        <div class="asset-input-group-percent-label">%</div>
                    </div>
                    <div class="form-group bmd-form-group asset-input-group">
                        <span class="asset-input-group-left">
                            <img src="~/images/chart.png" />
                        </span>
                        <div class="asset-input-group-label">
                            MSCI WORLD
                        </div>
                        <input placeholder="00" type="number" />
                        <div class="asset-input-group-percent-label">%</div>
                    </div>
                    <div class="form-group bmd-form-group asset-input-group">
                        <span class="asset-input-group-left">
                            <img src="~/images/chart.png" />
                        </span>
                        <div class="asset-input-group-label">
                            BTC
                        </div>
                        <input placeholder="00" type="number" />
                        <div class="asset-input-group-percent-label">%</div>
                    </div>
                    <div class="total-assets">
                        <div class="total-assets-label">TOTAL DISTRIBUTED</div>
                        <div class="total-assets-value">00</div>
                        <div class="total-assets-pecent-label">%</div>
                    </div>
                </div>
                <div class="col-lg-4">
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="next-button next-step" disabled="disabled">
                <span class="next-button-label">NEXT</span>
                <span class="next-button-icon"></span>
            </div>
        </div>
