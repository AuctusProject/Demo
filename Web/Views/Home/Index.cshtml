    <script type="text/javascript" src="~/lib/noUiSlider/nouislider.min.js"></script>
    <script src="~/js/registerCompany.js" asp-append-version="true"></script>
    <script src="~/js/registerEmployee.js" asp-append-version="true"></script>
}