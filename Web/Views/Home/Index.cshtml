﻿<div style="text-align: center; margin-top:10px">
    <div id="graphdiv"></div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12 wizard-container" style="text-align: center;">
            <div class="row">
                <div class="step active" id="step0" data-step-id="0">
                    <div class="row">
                    </div>
                    <div class="row">
                        <div class="col-lg-4 left">
                            <div class="pig-container">
                                <img src="~/images/landing/img-pig.png" srcset="~/images/landing/img-pig@2x.png 2x, ~/images/landing/img-pig@3x.png 3x" class="img-pig">
                            </div>
                        </div>
                        <div class="col-lg-8 right">
                            <div class="row">
                                <h1>WELCOME</h1>
                            </div>
                            <div class="buttons-control-div" onclick="window.location.href = '@Url.Action("StartDemo", "Home")';">
                                <div class="start-button">
                                    <span class="next-button-label">START&nbsp;DEMO</span>
                                    <img src="~/images/landing/play.png" srcset="~/images/landing/play@2x.png 2x, ~/images/landing/play@3x.png 3x" class="play-ico">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section style{
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/loading.css" />
    <link rel=stylesheet href="~/lib/codemirror/codemirror.css">
    <link rel=stylesheet href="~/lib/noUiSlider/nouislider.min.css">
}

@section scripts{
    <script src="~/lib/codemirror/codemirror.js"></script>
